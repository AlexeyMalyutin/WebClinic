                <div class="mt-3">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Услуга</th>
                                    <th>Цена</th>
                                    <th>Количество</th>
                                    <th>Итого</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>@Html.DisplayFor(model=>model.Service.Name)</td>
                                    <td>@Html.DisplayFor(model=>model.Service.Price) &#8381;</td>
                                    <td>@Html.DisplayFor(model=>model.Number) шт</td>
                                    <td>@Html.DisplayFor(model => model.Sum) &#8381;</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="text-right mb-3"><a asp-controller="Home" asp-action="Index" class="btn btn-outline-dark btn-sm mr-5" type="button">Продолжить</a></div>
            </div>
        </div>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
