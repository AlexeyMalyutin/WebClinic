<div class="container mt-5">
    <div class="d-flex justify-content-center row">
        <div class="col-md-8">
            <div class="p-3 bg-white rounded" style="border:groove">
                <div class="row">
                    <div class="col-md-6">
                        <h1 class="text-uppercase">Чек №@Html.DisplayFor(model=>model.Id)</h1>
                        <div class="billed"><span class="font-weight-bold text-uppercase">Покупатель:</span><span class="ml-1">@Html.DisplayFor(model=>model.Patient.FullName)</span></div>
                        <div class="billed"><span class="font-weight-bold text-uppercase">Дата покупки:</span><input readonly="readonly" id="ServDate" class="ml-1" style="border:none;outline:none;box-shadow:none;" /></div>
                    </div>
                    <div class="col-md-6 text-right mt-3">
                        <h4 class="mb-0">Поликлиника</h4><span>MyPolyclinic</span>
