@model IEnumerable<ClinicWEB.Models.Sell>

@{
    ViewData["Title"] = "Index";
}

<h1>Учёт услуг</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Patient.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patient.Birthday)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Service.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Service.Price) &#8381;
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Number), шт.
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sum) &#8381;
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Patient.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Patient.Birthday)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Service.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Service.Price) &#8381;
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Number)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sum) &#8381;
            </td>
            @*<td>
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>*@
        </tr>
}
    </tbody>
</table>
